<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pl.wooddy.checkvr.MainActivity"
    tools:showIn="@layout/activity_main"
    >

  <TextView
      android:id="@+id/gyroscope"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="32dp"
      android:drawableLeft="@mipmap/ic_launcher"
      android:gravity="center_vertical"
      android:text="@string/gyroscope"
      android:textAppearance="@style/TextAppearance.AppCompat.Headline"
      app:layout_constraintHorizontal_bias="0.051"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/customizableVrHeadset"
      />
  <TextView
      android:id="@+id/accelerometer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="48dp"
      android:text="@string/accelerometer"
      android:textAppearance="@style/TextAppearance.AppCompat.Headline"
      app:layout_constraintLeft_toLeftOf="@+id/gyroscope"
      app:layout_constraintTop_toBottomOf="@+id/gyroscope"
      />
  <ImageView
      android:id="@+id/isGyro"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginBottom="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      app:layout_constraintBottom_toBottomOf="@+id/gyroscope"
      app:layout_constraintLeft_toRightOf="@+id/gyroscope"
      app:layout_constraintTop_toTopOf="@+id/gyroscope"
      app:layout_constraintVertical_bias="0.0"
      tools:srcCompat="@drawable/ic_check_circle"
      />
  <ImageView
      android:id="@+id/isAccelerometer"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginBottom="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      app:layout_constraintBottom_toBottomOf="@+id/accelerometer"
      app:layout_constraintLeft_toRightOf="@+id/accelerometer"
      app:layout_constraintTop_toTopOf="@+id/accelerometer"
      app:layout_constraintVertical_bias="0.32999998"
      tools:srcCompat="@drawable/ic_no"
      />
  <ImageView
      android:id="@+id/facebookButton"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginBottom="16dp"
      android:scaleType="fitXY"
      android:tint="@color/colorPrimary"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="@+id/accelerometer"
      app:srcCompat="@drawable/ic_action_facebook"
      />
  <TextView
      android:id="@+id/facebookTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:text="Visit our fun page"
      app:layout_constraintBottom_toBottomOf="@+id/facebookButton"
      app:layout_constraintLeft_toRightOf="@+id/facebookButton"
      app:layout_constraintTop_toTopOf="@+id/facebookButton"
      app:layout_constraintVertical_bias="0.58000004"
      />
  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="wrap_content"
      android:layout_height="70dp"
      android:layout_marginTop="16dp"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/logo"
      />
  <TextView
      android:id="@+id/customizableVrHeadset"
      android:layout_width="368dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:text="Customizable VR headset"
      android:textAlignment="center"
      android:textSize="18sp"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView3"
      />

</android.support.constraint.ConstraintLayout >
